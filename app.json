{
    "id": "com.robinbolscher.homeysledring",
    "sdk": 2,
    "name": {
        "en": "Homey's LED Ring"
    },
    "description": {
        "en": "Let's you control Homey's LED ring as a regular device"
    },
    "permissions": [
        "homey:manager:api"
    ],
    "category": "lights",
    "version": "1.0.0",
    "compatibility": ">=1.5.0",
    "author": {
        "name": "Robin Bolscher",
        "email": "robin@athom.nl"
    },
    "drivers": [
        {
            "id": "homey_ledring",
            "name": {
                "en": "Homey's LED Ring",
                "nl": "Homey's LED Ring"
            },
            "class": "light",
            "capabilities": [
                "onoff",
                "dim"
            ],
            "pair": [
                {
                    "id": "list_devices",
                    "template": "list_devices_singular",
                    "navigation": {
                        "next": "add_devices"
                    }
                },
                {
                    "id": "add_devices",
                    "template": "add_devices"
                }
            ]
        }
    ]
}